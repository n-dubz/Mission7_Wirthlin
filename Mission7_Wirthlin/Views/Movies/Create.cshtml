@model Mission7_Wirthlin.Models.Movie
@{
    ViewBag.Title = "Add Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add a New Movie</h1>
<form asp-action="Create" method="post">
    <div class="form-group"><label asp-for="Title"></label><input asp-for="Title" class="form-control" /><span asp-validation-for="Title" class="text-danger"></span></div>
    <div class="form-group"><label asp-for="Year"></label><input asp-for="Year" class="form-control" type="number" /><span asp-validation-for="Year" class="text-danger"></span></div>
    <div class="form-group"><label asp-for="CategoryId"></label><input asp-for="CategoryId" class="form-control" type="number" /></div>
    <div class="form-group"><label asp-for="Director"></label><input asp-for="Director" class="form-control" /></div>
    <div class="form-group"><label asp-for="Rating"></label><select asp-for="Rating" class="form-control"><option value="">-- Select Rating --</option><option>G</option><option>PG</option><option>PG-13</option><option>R</option></select></div>
    <div class="form-group"><label asp-for="Edited"></label><select asp-for="Edited" class="form-control"><option value="false">No</option><option value="true">Yes</option></select></div>
    <div class="form-group"><label asp-for="CopiedToPlex"></label><select asp-for="CopiedToPlex" class="form-control"><option value="false">No</option><option value="true">Yes</option></select></div>
    <div class="form-group"><label asp-for="LentTo"></label><input asp-for="LentTo" class="form-control" /></div>
    <div class="form-group"><label asp-for="Notes"></label><input asp-for="Notes" class="form-control" maxlength="25" /><span asp-validation-for="Notes" class="text-danger"></span></div>
    <button type="submit" class="btn btn-primary mt-2">Add Movie</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}